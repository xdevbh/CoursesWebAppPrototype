@inherits LayoutComponentBase

<MudThemeProvider Theme="MyCustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0">
            <MudHidden Breakpoint="Breakpoint.SmAndUp">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => DrawerToggle())"/>
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.Xs">
                <a href="/"><MudImage Src="images/logo.svg" Alt="Logo" Height="70"/></a>
                <MudButton Href="" Variant="Variant.Text" Class="mx-2"
                           StartIcon="@Icons.Material.Filled.Dashboard" Style="text-transform:none" Color="Color.Inherit">
                    Discover
                </MudButton>
                <MudButton Href="/courses" Variant="Variant.Text" Class="mx-2"
                           StartIcon="@Icons.Material.Filled.School" Style="text-transform:none" Color="Color.Inherit">
                    Courses
                </MudButton>
                <MudSpacer/>
                <MudButton Href="/signin"    Variant="Variant.Text" Class="mx-2"
                           StartIcon="@Icons.Material.Filled.AccountCircle" Style="text-transform:none" Color="Color.Inherit">
                    Account
                </MudButton>

            </MudHidden>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudImage Src="images/logoBlack.svg" Alt="Logo" Height="70"/>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="pt-16 pb-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    readonly MudTheme MyCustomTheme = new()
    {
        Palette = new PaletteLight(),
        PaletteDark = new PaletteDark()
    };

}